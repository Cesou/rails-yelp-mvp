<h2>Details of the restaurant '<%= @restaurant.name.capitalize %>'</h2>
  <p>Address:<%= @restaurant.address %></p>
  <p>Number:<%= @restaurant.phone_number %></p>
  <p>Category:<%= @restaurant.category %></p>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content %></p>
<p><%= review.rating %></p>
<%end%>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Revenir aux restaurants", restaurants_path, class: "btn btn-primary" %>

